<!DOCTYPE html>
<html lang="fa">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>پنل ادمین</title>
    <!-- استفاده از Bootstrap نسخه راست به چپ -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.rtl.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f5f5f5;
        }
        .sidebar {
            background-color: #343a40;
            color: #fff;
            height: 100vh;
            padding: 20px;
        }
        .sidebar a {
            color: #fff;
            text-decoration: none;
        }
        .sidebar a:hover {
            text-decoration: underline;
        }
        .content {
            padding: 20px;
        }
        .table-actions button {
            margin-right: 5px;
        }
        .table-actions button:last-child {
            margin-right: 0;
        }
    </style>
</head>
<body dir="rtl">
<div class="container-fluid">
    <div class="row">
        <!-- نوار کناری (Sidebar) -->
        <nav class="col-md-2 sidebar">
            <h3 class="mb-4">پنل ادمین</h3>
            <ul class="nav flex-column">
                <li class="nav-item mb-2">
                    <a class="nav-link" href="#users">مدیریت کاربران</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link" href="#movies">مدیریت فیلم‌ها</a>
                </li>
            </ul>
        </nav>

        <!-- محتوای اصلی -->
        <main class="col-md-10 content">
            <!-- بخش مدیریت کاربران -->
            <section id="users">
                <h2 class="mb-4">مدیریت کاربران</h2>
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>شناسه</th>
                        <th>نام کاربری</th>
                        <th>ایمیل</th>
                        <th>اقدامات</th>
                    </tr>
                    </thead>
                    <tbody>
                    <!-- نمونه یک ردیف کاربر -->
                    <tr>
                        <td>1</td>
                        <td>کاربر1</td>
                        <td>user1@example.com</td>
                        <td class="table-actions">
                            <button class="btn btn-warning btn-sm" onclick="openUpdateUserModal(1, 'کاربر1', 'user1@example.com')">ویرایش</button>
                            <button class="btn btn-danger btn-sm" onclick="deleteUser(1)">حذف</button>
                        </td>
                    </tr>
                    <!-- ردیف‌های بیشتر می‌توانند به صورت داینامیک اضافه شوند -->
                    </tbody>
                </table>
            </section>

            <hr>

            <!-- بخش مدیریت فیلم‌ها -->
            <section id="movies">
                <h2 class="mb-4">مدیریت فیلم‌ها</h2>
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>شناسه</th>
                        <th>نام فیلم</th>
                        <th>ژانر</th>
                        <th>سال انتشار</th>
                        <th>اقدامات</th>
                    </tr>
                    </thead>
                    <tbody>
                    <!-- نمونه یک ردیف فیلم -->
                    <tr>
                        <td>1</td>
                        <td>فیلم نمونه</td>
                        <td>اکشن</td>
                        <td>2023</td>
                        <td class="table-actions">
                            <button class="btn btn-warning btn-sm" onclick="openUpdateMovieModal(1, 'فیلم نمونه', 'اکشن', 2023)">ویرایش</button>
                            <button class="btn btn-danger btn-sm" onclick="deleteMovie(1)">حذف</button>
                        </td>
                    </tr>
                    <!-- ردیف‌های بیشتر می‌توانند به صورت داینامیک اضافه شوند -->
                    </tbody>
                </table>
            </section>
        </main>
    </div>
</div>

<!-- مودال ویرایش کاربر -->
<div class="modal fade" id="updateUserModal" tabindex="-1" aria-labelledby="updateUserModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="updateUserModalLabel" class="modal-title">ویرایش کاربر</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="بستن"></button>
            </div>
            <div class="modal-body">
                <form id="updateUserForm">
                    <input type="hidden" id="updateUserId">
                    <div class="mb-3">
                        <label for="updateUsername" class="form-label">نام کاربری</label>
                        <input type="text" class="form-control" id="updateUsername">
                    </div>
                    <div class="mb-3">
                        <label for="updateEmail" class="form-label">ایمیل</label>
                        <input type="email" class="form-control" id="updateEmail">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">بستن</button>
                <button type="button" class="btn btn-primary" onclick="updateUser()">ذخیره تغییرات</button>
            </div>
        </div>
    </div>
</div>

<!-- مودال ویرایش فیلم -->
<div class="modal fade" id="updateMovieModal" tabindex="-1" aria-labelledby="updateMovieModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="updateMovieModalLabel" class="modal-title">ویرایش فیلم</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="بستن"></button>
            </div>
            <div class="modal-body">
                <form id="updateMovieForm">
                    <input type="hidden" id="updateMovieId">
                    <div class="mb-3">
                        <label for="updateMovieName" class="form-label">نام فیلم</label>
                        <input type="text" class="form-control" id="updateMovieName">
                    </div>
                    <div class="mb-3">
                        <label for="updateGenre" class="form-label">ژانر</label>
                        <input type="text" class="form-control" id="updateGenre">
                    </div>
                    <div class="mb-3">
                        <label for="updateReleaseYear" class="form-label">سال انتشار</label>
                        <input type="number" class="form-control" id="updateReleaseYear">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">بستن</button>
                <button type="button" class="btn btn-primary" onclick="updateMovie()">ذخیره تغییرات</button>
            </div>
        </div>
    </div>
</div>

<!-- اسکریپت‌های جاوا اسکریپت -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
    // باز کردن مودال ویرایش کاربر با اطلاعات داده شده
    function openUpdateUserModal(id, username, email) {
        document.getElementById('updateUserId').value = id;
        document.getElementById('updateUsername').value = username;
        document.getElementById('updateEmail').value = email;
        var updateUserModal = new bootstrap.Modal(document.getElementById('updateUserModal'));
        updateUserModal.show();
    }

    // تابع ویرایش کاربر (اینجا منطق به‌روزرسانی باید اضافه شود)
    function updateUser() {
        var id = document.getElementById('updateUserId').value;
        var username = document.getElementById('updateUsername').value;
        var email = document.getElementById('updateEmail').value;
        console.log('به‌روزرسانی کاربر:', { id, username, email });
        // اینجا می‌توانید درخواست AJAX به سرور ارسال کنید

        // بستن مودال پس از به‌روزرسانی
        var updateUserModalEl = document.getElementById('updateUserModal');
        var updateUserModal = bootstrap.Modal.getInstance(updateUserModalEl);
        updateUserModal.hide();
    }

    // تابع حذف کاربر (اینجا منطق حذف باید اضافه شود)
    function deleteUser(id) {
        console.log('حذف کاربر با شناسه:', id);
        // در اینجا درخواست حذف به سرور ارسال شود
    }

    // باز کردن مودال ویرایش فیلم با اطلاعات داده شده
    function openUpdateMovieModal(id, movieName, genre, releaseYear) {
        document.getElementById('updateMovieId').value = id;
        document.getElementById('updateMovieName').value = movieName;
        document.getElementById('updateGenre').value = genre;
        document.getElementById('updateReleaseYear').value = releaseYear;
        var updateMovieModal = new bootstrap.Modal(document.getElementById('updateMovieModal'));
        updateMovieModal.show();
    }

    // تابع ویرایش فیلم (اینجا منطق به‌روزرسانی باید اضافه شود)
    function updateMovie() {
        var id = document.getElementById('updateMovieId').value;
        var movieName = document.getElementById('updateMovieName').value;
        var genre = document.getElementById('updateGenre').value;
        var releaseYear = document.getElementById('updateReleaseYear').value;
        console.log('به‌روزرسانی فیلم:', { id, movieName, genre, releaseYear });
        // اینجا می‌توانید درخواست AJAX به سرور ارسال کنید

        // بستن مودال پس از به‌روزرسانی
        var updateMovieModalEl = document.getElementById('updateMovieModal');
        var updateMovieModal = bootstrap.Modal.getInstance(updateMovieModalEl);
        updateMovieModal.hide();
    }

    // تابع حذف فیلم (اینجا منطق حذف باید اضافه شود)
    function deleteMovie(id) {
        console.log('حذف فیلم با شناسه:', id);
        // در اینجا درخواست حذف به سرور ارسال شود
    }
</script>
</body>
</html>
